<div class="container">
  <h1 class="text">Welcome Back!</h1>
  <br>
  <form action="/auth/login" method="POST">
    <div class="form-group row">
      <label for="authEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input id="authEmail" class="form-control" type="email" name="email">
        </div>
    </div>

    <div class="form-group row">
      <label for="authPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input id="authPassword" class="form-control" type="password" name="password">
        </div>
    </div>

    <button class="btn btn-default middleBG" type="submit">Log in</button>
  </form>

</div>

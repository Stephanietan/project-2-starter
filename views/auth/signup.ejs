
<div class="container">
  <h1 class="text">Create an account</h1>
  <br>
  <form action="/auth/signup" method="POST">
    <div class="form-group row">
      <label for="authEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
         <input id="authEmail" class="form-control" type="email" name="email">
        </div>
    </div>

    <div class="form-group row">
      <label for="authName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input id="authName" class="form-control" type="text" name="name">
        </div>
    </div>

    <div class="form-group row">
      <label for="authPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input id="authPassword" class="form-control" type="password" name="password">
        </div>
    </div>

    <button class="btn btn-default middleBG" type="submit">Sign Up</button>
  </form>
</div>
